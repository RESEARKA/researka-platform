{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "types": [
      "jest",
      "node",
      "@testing-library/jest-dom",
      "./types/jest-dom",
      "./types/jest-extended"
    ]
  },
  "include": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "jest.setup.js",
    "jest.config.js",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
